<div class="container">
    <div class="row">
        <div class="col-md-12">
            <br><br><br>
            <div class="well well-sm">
                <form class="form-horizontal" action="/editarGasto/{{gasto.url}}" method="post">
                    <fieldset>
                        <legend class="text-center header">Editar Gasto</legend>                    
                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
                            <div class="col-md-12">
                              <input type="text" name="nombre" value='{{gasto.nombre}}' placeholder="Nombre del gasto" class="form-control">                               
                            </div>
                        </div>

                         <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-envelope-o bigicon"></i></span>
                            <div class="col-md-12">
                                <input name="gastoEsperado" type="text"  value='{{gasto.gastoEsperado}}'placeholder="Gasto esperado" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"></span>
                            <div class="col-md-12">
                                   
                                    <input name="gastoReal" type="text" placeholder="Gasto real"  value='{{gasto.gastoReal}}'class="form-control">
                           
                        </div>
                        
                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-pencil-square-o bigicon"></i></span>
                            <div class="col-md-12">                           
                                <input type="text" name="diferencia" readonly="readonly" value='{{gasto.diferencia}}' class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-pencil-square-o bigicon"></i></span>
                            <div class="col-md-12">
                                {{!-- Implementar un WYSIWYG --}}
                                <label>Descripci√≥n</label>
                                <input type="hidden" name="descripcion" id="x"  value='{{gasto.descripcion}}'>
                                <trix-editor input="x" class="form-control"></trix-editor>
                            </div>
                        </div>
                        

                        <div class="form-group">
                            <div class="col-md-12 text-center">
                                <button type="submit" class="btn btn-primary btn-lg">Editar Tipo Gasto</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>